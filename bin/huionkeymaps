#!/bin/bash

# side keys
xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 1 "key +ctrl z -ctrl"
xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 2 "key +ctrl y -ctrl"
xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 3 "key +ctrl t -ctrl"

xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 8 "key +ctrl +shift = -shift -ctrl"
xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 9 "key +ctrl - -ctrl"
xsetwacom set "HUION Huion Tablet_GS1331 Pad pad" Button 10 "key m"

# pen
xsetwacom set "HUION Huion Tablet_GS1331 stylus" Button 2 "key e"
